<div class="row d-flex justify-content-center align-items-center  bg-primary" style="min-height: 100vh;">
    <div class="col-md-8">
        <div class="row">
                <img src="img/acapuedo-logo-transparente.png" alt="" class="mx-auto d-block" style="height: 150px; width:auto;">
                <div class="text-light mb-5 text-center"><h1>Formar parte ahora</h1></div>
            </div>
        <form class="row shadow g-3 p-3 needs-validation bg-body rounded-3" novalidate method="post" action="/form">
            <div class="col-12 position-relative">
                <label for="tipo_persona" class="form-label">Tipo de Negocio</label>
                <select class="form-select" id="tipo_persona" name="tipo_persona" required>
                    <option selected value="">Elegir tipo de persona</option>
                    <option value="F">Persona física (A título personal)</option>
                    <option value="J">Persona jurídica (Comercio, despensa o empresa)</option>
                </select>
                <div class="valid-feedback">
                    Correcto.
                </div>
                <div class="invalid-feedback">
                    Debe seleccionar el tipo de persona
                </div>
            </div>
            <div class="col-12 position-relative">
                <label for="cedula" class="form-label">Número de cédula</label>
                <input type="text" class="form-control" id="cedula" name="cedula"  required>
                <div class="invalid-feedback">
                    Debe proporcionar un número de cédula
                </div>
            </div>
            <div class="col-12 position-relative">
                <label for="celular" class="form-label">Celular</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="celular" name="celular" required pattern="^(\+?(595)|0)(9[0-9]{2})([0-9\-]{6})$|^(\+?(595)|\+?(595) |0|)(9[0-9]{2}) ([0-9\-]{6})$|" placeholder="Ej.: 0981 123456">
                    <button class="btn btn-outline-secondary" type="button" id="btnEnviarPin" onclick="enviarPIN()">
                        Enviar PIN
                    </button>
                    <button class="btn btn-outline-secondary" type="button" id="btnEnviandoPin" disabled style="display: none;">
                        <span class="spinner-grow spinner-grow-sm text-secondary" role="status"></span>
                        Enviando PIN...
                    </button>
                </div>
                <div class="invalid-feedback">
                    Requerido. Número de telefono inválido.
                </div>
            </div>
            <div class="col-12 position-relative">
                <label for="pin" class="form-label">PIN</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="pin" name="pin" required>
                     <button class="btn btn-primary" type="submit">Registrarse <i class="bi bi-arrow-right"></i> </button>
                </div>
                <div class="invalid-feedback">
                    Debe proporcionar el PIN enviado
                </div>
            </div>
            <div class="col-12">
               
            </div>

        </form>
    </div>
</div>



<script>

    function enviarPIN(){
        $("#btnEnviarPin").hide();
        $("#btnEnviandoPin").show();

        $.post("./signup/sendpin/"+ $("#celular").val(), (data)=>{
            $("#btnEnviandoPin").hide();
            $("#btnEnviarPin").show();
            $("#btnEnviarPin").html("Reenviar PIN");


            console.log(data);
        });
    }

</script>